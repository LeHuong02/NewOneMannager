<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DangKyActivity"
    android:orientation="vertical">

        <TextView
            android:drawableEnd="@drawable/ic_person"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="TẠO TÀI KHOẢN"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#00BFA5"
            android:drawableRight="@drawable/ic_person" />
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_wave"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Welcome"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/teal_700"/>
        <EditText
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_username"
            android:gravity="center"
            android:id="@+id/edit_taikhoan_hoten"
            android:hint="Nhập họ và tên"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bovien"/>
        <EditText
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_username"
            android:gravity="center"
            android:id="@+id/edit_taikhoan_dangky"
            android:hint="Nhập tài khoản"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bovien"/>
        <EditText
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_password"
            android:inputType="textPassword"
            android:id="@+id/edit_nhapmatkhau_dangky"
            android:hint="Nhập mật khẩu"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bovien"/>
        <EditText
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_password"
            android:inputType="textPassword"
            android:id="@+id/edit_nhaplaimatkhau_dangky"
            android:hint="Nhập lại mật khẩu"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/bovien"/>

        <Button
            android:id="@+id/btn_dangky"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:backgroundTint="#2B6B75"
            android:text="Đăng ký"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bovien"/>
        <Button
            android:id="@+id/btn_trolai"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#2B6B75"
            android:text="Trở lại"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bovien"/>
    </LinearLayout>
